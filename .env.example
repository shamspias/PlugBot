####################################
# PlugBot global configuration     #
####################################

# ---------- Runtime -------------
APP_DEBUG=false
SECRET_KEY=your-secret-key-change-this-in-production
ENCRYPTION_KEY=your-32-char-encryption-key-here

# ---------- Ports exposed on your host -------------
FRONTEND_PORT=3514         # http://localhost:3514
BACKEND_PORT=8531          # http://localhost:8531
POSTGRES_HOST_PORT=5429    # psql -h localhost -p 5429
REDIS_HOST_PORT=6387       # redis-cli -p 6387

# ---------- Database (in-cluster) ------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=dify_telegram
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# ---------- Redis (in-cluster) ---------------------
REDIS_URL=redis://redis:6379/0

# ---------- CORS & Front-end -----------------------
BACKEND_CORS_ORIGINS=["http://localhost:${FRONTEND_PORT}","http://localhost:${BACKEND_PORT}","http://frontend:3000"]
NEXT_PUBLIC_API_URL=http://localhost:${BACKEND_PORT}/api/v1

# ----------- SMTP -------------------
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey           # or your SMTP username from provider
SMTP_PASSWORD=SG.xxxxxxx       # the actual password or API key
SMTP_FROM=no-reply@yourdomain.com
SMTP_STARTTLS=true

# Auth
ALLOW_REGISTRATION=false  # Set to true to allow new users after first admin
FRONTEND_URL=http://localhost:${FRONTEND_PORT}

# ---------- Localization -------------
DEFAULT_LANGUAGE=en         # Default language (en, ru)

# ---------- Timezone (optional) ------
TZ=UTC                      # Set your timezone (e.g., America/New_York, Europe/London, Asia/Tokyo)